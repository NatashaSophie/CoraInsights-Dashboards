import React, { useState, useEffect } from 'react';
import axios from 'axios';
import { Line, Bar, Doughnut } from 'react-chartjs-2';
import {
  Chart as ChartJS,
  CategoryScale,
  LinearScale,
  PointElement,
  LineElement,
  BarElement,
  ArcElement,
  Title,
  Tooltip,
  Legend
} from 'chart.js';

ChartJS.register(
  CategoryScale,
  LinearScale,
  PointElement,
  LineElement,
  BarElement,
  ArcElement,
  Title,
  Tooltip,
  Legend
);

const API_URL = 'http://localhost:1337';

function PublicDashboard() {
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [data, setData] = useState(null);

  useEffect(() => {
    fetchData();
  }, []);

  const fetchData = async () => {
    try {
      setLoading(true);
      const response = await axios.get(`${API_URL}/dashboards/public`);
      setData(response.data);
      setLoading(false);
    } catch (err) {
      console.error('Erro ao carregar dados:', err);
      setError('Erro ao carregar dados da API');
      setLoading(false);
    }
  };

  if (loading) {
    return <div className="loading">Carregando dados...</div>;
  }

  if (error) {
    return <div className="error">{error}</div>;
  }

  const monthlyDataChart = {
    labels: data.monthlyData ? data.monthlyData.map(d => d.month) : [],
    datasets: [
      {
        label: 'Novos Cadastros',
        data: data.monthlyData ? data.monthlyData.map(d => d.count) : [],
        borderColor: 'rgb(75, 192, 192)',
        backgroundColor: 'rgba(75, 192, 192, 0.2)',
        tension: 0.4
      }
    ]
  };

  // Status do Caminho: distribui√ß√£o por quantidade de trechos
  const statusCaminhoLabels = ['Caminho Completo (13)', 'Em Andamento'];
  const statusCaminhoData = [data.caminhoCompleto || 0, data.emAndamento || 0];
  
  // Cores vibrantes e distintas para cada categoria
  const coresVibrantes = [
    'rgba(34, 197, 94, 0.8)',   // Verde para completo
    'rgba(239, 68, 68, 0.8)',    // Vermelho
    'rgba(59, 130, 246, 0.8)',   // Azul
    'rgba(251, 191, 36, 0.8)',   // Amarelo
    'rgba(168, 85, 247, 0.8)',   // Roxo
    'rgba(236, 72, 153, 0.8)',   // Rosa
    'rgba(20, 184, 166, 0.8)',   // Turquesa
    'rgba(249, 115, 22, 0.8)',   // Laranja
    'rgba(139, 92, 246, 0.8)',   // Violeta
    'rgba(14, 165, 233, 0.8)',   // C√©u
    'rgba(132, 204, 22, 0.8)',   // Lima
    'rgba(234, 179, 8, 0.8)',    // Ouro
    'rgba(244, 63, 94, 0.8)',    // Vermelho Rosa
  ];
  
  // Adicionar caminhos parciais (1-12 trechos)
  if (data.caminhosParciais) {
    for (let i = 1; i <= 12; i++) {
      const key = `${i}_trechos`;
      const count = data.caminhosParciais[key] || 0;
      if (count > 0) {
        statusCaminhoLabels.splice(statusCaminhoLabels.length - 1, 0, `${i} ${i === 1 ? 'trecho' : 'trechos'}`);
        statusCaminhoData.splice(statusCaminhoData.length - 1, 0, count);
      }
    }
  }

  const trailsCompletionChart = {
    labels: statusCaminhoLabels,
    datasets: [
      {
        data: statusCaminhoData,
        backgroundColor: coresVibrantes.slice(0, statusCaminhoLabels.length),
        borderWidth: 2,
        borderColor: '#fff'
      }
    ]
  };

  const topPilgrimsChart = {
    labels: data.topPilgrims.slice(0, 5).map(p => p.nickname),
    datasets: [
      {
        label: 'Pontos',
        data: data.topPilgrims.slice(0, 5).map(p => p.points),
        backgroundColor: 'rgba(54, 162, 235, 0.8)',
      }
    ]
  };

  return (
    <div className="container dashboard">
      <div className="dashboard-header">
        <h1 className="dashboard-title">Dashboard P√∫blico</h1>
        <p className="dashboard-subtitle">Estat√≠sticas e gamifica√ß√£o do Caminho de Cora</p>
      </div>

      <div className="metrics-grid">
        <div className="metric-card">
          <div className="metric-label">Total de Peregrinos</div>
          <div className="metric-value">{data.totalPilgrims}</div>
          <div className="metric-change">
            üë® {data.malePilgrims} masculino ‚Ä¢ üë© {data.femalePilgrims} feminino
          </div>
        </div>

        <div className="metric-card">
          <div className="metric-label">Percursos Conclu√≠dos</div>
          <div className="metric-value">{data.completedTrails}</div>
          <div className="metric-change positive">caminho completo ou parcial</div>
        </div>

        <div className="metric-card">
          <div className="metric-label">Percursos Ativos</div>
          <div className="metric-value">{data.activeTrails}</div>
          <div className="metric-change">em andamento</div>
        </div>

        <div className="metric-card">
          <div className="metric-label">Caminho Completo</div>
          <div className="metric-value">{data.caminhoCompleto}</div>
          <div className="metric-change positive">13 trechos percorridos</div>
        </div>
      </div>

      <div className="charts-section">
        <h2 className="section-title">An√°lises e Estat√≠sticas</h2>
        
        <div className="charts-grid">
          <div className="chart-card">
            <h3 className="chart-title">Crescimento Mensal de Cadastros</h3>
            <p style={{ fontSize: '14px', color: '#666', marginBottom: '16px' }}>
              Mostra quantos novos peregrinos se cadastraram no sistema em cada m√™s dos √∫ltimos 12 meses
            </p>
            <Line 
              data={monthlyDataChart} 
              options={{
                responsive: true,
                plugins: {
                  legend: {
                    display: false
                  }
                }
              }}
            />
          </div>

          <div className="chart-card">
            <h3 className="chart-title">Status do Caminho</h3>
            <p style={{ fontSize: '14px', color: '#666', marginBottom: '16px' }}>
              Distribui√ß√£o dos percursos por quantidade de trechos completados
            </p>
            <Doughnut 
              data={trailsCompletionChart}
              options={{
                responsive: true,
                plugins: {
                  legend: {
                    position: 'bottom',
                    labels: {
                      boxWidth: 12
                    }
                  }
                }
              }}
            />
          </div>
        </div>

        <div className="charts-grid" style={{ marginTop: '24px' }}>
          <div className="chart-card" style={{ gridColumn: '1 / -1' }}>
            <h3 className="chart-title">üèÜ Ranking de Peregrinos - Top 5</h3>
            <Bar 
              data={topPilgrimsChart}
              options={{
                responsive: true,
                indexAxis: 'y',
                plugins: {
                  legend: {
                    display: false
                  }
                },
                scales: {
                  x: {
                    beginAtZero: true
                  }
                }
              }}
            />
          </div>
        </div>
      </div>

      <div className="charts-section">
        <h2 className="section-title">üìä Ranking Detalhado</h2>
        <div className="chart-card">
          <table style={{ width: '100%', borderCollapse: 'collapse' }}>
            <thead>
              <tr style={{ borderBottom: '2px solid #e0e0e0' }}>
                <th style={{ textAlign: 'left', padding: '12px', color: '#666' }}>#</th>
                <th style={{ textAlign: 'left', padding: '12px', color: '#666' }}>Nickname</th>
                <th style={{ textAlign: 'right', padding: '12px', color: '#666' }}>Percursos</th>
                <th style={{ textAlign: 'right', padding: '12px', color: '#666' }}>Trechos</th>
                <th style={{ textAlign: 'right', padding: '12px', color: '#666' }}>Dist√¢ncia (km)</th>
                <th style={{ textAlign: 'right', padding: '12px', color: '#666' }}>Tempo (h)</th>
                <th style={{ textAlign: 'right', padding: '12px', color: '#666' }}>Vel. M√©dia (km/h)</th>
                <th style={{ textAlign: 'right', padding: '12px', color: '#666' }}>Pontos</th>
              </tr>
            </thead>
            <tbody>
              {data.topPilgrims.map((pilgrim, index) => (
                <tr key={index} style={{ borderBottom: '1px solid #f0f0f0' }}>
                  <td style={{ padding: '12px', fontWeight: '600' }}>{index + 1}</td>
                  <td style={{ padding: '12px', fontWeight: '600' }}>{pilgrim.nickname}</td>
                  <td style={{ padding: '12px', textAlign: 'right' }}>{pilgrim.trails}</td>
                  <td style={{ padding: '12px', textAlign: 'right' }}>{pilgrim.routes}</td>
                  <td style={{ padding: '12px', textAlign: 'right' }}>{pilgrim.distance.toLocaleString()}</td>
                  <td style={{ padding: '12px', textAlign: 'right' }}>{pilgrim.time.toFixed(1)}</td>
                  <td style={{ padding: '12px', textAlign: 'right' }}>{pilgrim.averageSpeed.toFixed(2)}</td>
                  <td style={{ padding: '12px', textAlign: 'right', fontWeight: '600', color: '#10b981' }}>
                    {pilgrim.points.toLocaleString()}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  );
}

export default PublicDashboard;
